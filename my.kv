# Absolute size specifications do not work if the window is moved from one screen to another screen with a different resolution. 
# For this reason, the text size of a label is always used for absolute values. 
# Texts are displayed in the same size at any resolution.
# This is also the reason why there are labels with spaces in the popup. These are required to specify the absolute height of the lines. 

<MainView>:

    connect_button: connect_button
    port_input: port_input
    info_label: info_label
    data_list: data_list

    cols: 1
    size_hint: (0.95, 0.95)
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    spacing: (0, comPortLabel.texture_size[1])
    Label:
        text: 'CANgineBerry CANopen Manager Demonstration - Network Overview'
        size_hint: (1, None)
        height: comPortLabel.texture_size[1] * 2
    GridLayout:
        cols: 3
        size_hint: (1, None)
        height: comPortLabel.texture_size[1] * 2
        Label:
            text: 'COM Port:'
            size_hint: (None, None)
            height: self.texture_size[1] * 2
            width: self.texture_size[0] * 1.5
            id: comPortLabel
        TextInput:
            text: 'COM1'
            multiline: False
            size_hint: (1, None)
            height: comPortLabel.texture_size[1] * 2
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            id: port_input
        Button:
            text: 'Connect'
            size_hint: (None, None)
            height: comPortLabel.texture_size[1] * 2
            width: self.texture_size[0] * 1.5
            background_color: "yellow"
            on_press: root.connect()
            id: connect_button
    GridLayout:
        cols: 5
        size_hint: (1, None)
        height: comPortLabel.texture_size[1] * 2
        Label:
            text: 'Node Id:'
            size_hint: (0.1, None)
            height: self.texture_size[1]
            bold: True
        Label:
            text: 'Status:'
            size_hint: (0.1, None)
            height: self.texture_size[1]
            bold: True
        Label:
            text: 'Vendor:'
            size_hint: (0.35, None)
            height: self.texture_size[1]
            bold: True
        Label:
            text: 'Product:'
            size_hint: (0.35, None)
            height: self.texture_size[1]
            bold: True
        Label:
            text: 'Detail:'
            size_hint: (0.1, None)
            height: self.texture_size[1]
            bold: True
    ScrollView:
        size_hint: (1, 1)
        do_scroll_x: False
        GridLayout:
            cols: 5
            size_hint: 1, None
            height: self.minimum_height
            row_default_height: comPortLabel.texture_size[1] * 2
            row_force_default: True
            id: data_list
    GridLayout:
        cols: 2
        size_hint: (1, None)
        height: comPortLabel.texture_size[1] * 2
        Label:
            text: ''
            size_hint: (0.8, None)
            height: self.texture_size[1] * 2
            id: info_label
        Button:
            text: 'Clear'
            size_hint: (None, None)
            height: self.texture_size[1] * 2
            width: self.texture_size[0] * 1.5
            background_color: "yellow"
            on_press: root.clear_list()

<PopupView>:

    detail_list: detail_list

    size_hint: (1, 1)
    GridLayout:
        cols: 2
        size_hint: 1, None
        height: self.minimum_height
        row_default_height: invisible_label.texture_size[1]
        row_force_default: True
        id: detail_list
        Label:
            text: ' '
        Label:
            text: ' '
            id: invisible_label

    